{
  "name": "note-taker",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "codegen": "npm-run-all -p codegen:*",
    "codegen:graphql": "graphql-codegen",
    "test": "jest",
    "lint": "eslint --ext .js,.ts,.tsx",
    "type-check": "tsc",
    "qa": "npm-run-all -p lint test type-check",
    "ci-build": "yarn qa && yarn codegen && yarn build",
    "postinstall": "yarn codegen"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn qa",
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@apollo/client": "^3.0.0-beta.41",
    "@graphql-modules/core": "^0.7.14",
    "apollo-server-micro": "^2.11.0",
    "dotenv": "^8.2.0",
    "micro-cors": "^0.1.1",
    "next": "^9.3.4",
    "next-with-apollo": "^5.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@types/micro-cors": "^0.1.0",
    "@types/node": "^13.9.8",
    "@types/react": "^16.9.31",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "babel-plugin-module-resolver": "^4.0.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "husky": ">=4",
    "lint-staged": ">=10",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "typescript": "^3.7.5"
  }
}
